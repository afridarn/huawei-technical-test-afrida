<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <title>Registration</title>
  </head>

  <body>
    <div id="form-wrapper">
      <h1 class="text-center font-bold">Register</h1>
      <form id="register-form">
        <div class="text-box">
          <label for="name">Name</label>
          <input id="name" type="text" name="name" />
          <p id="error-name" class="error"></p>
        </div>
        <div class="text-box">
          <label for="email">Email</label>
          <input id="email" type="email" name="email" />
          <p id="error-email" class="error"></p>
        </div>
        <div class="text-box">
          <label for="input">Phone Number</label>
          <input id="phone" type="tel" name="phone" />
          <p id="error-phone" class="error"></p>
        </div>

        <button type="submit" id="submit-button">Submit</button>
      </form>
      <div class="text-center">
        <button type="button" id="get-data-button">Get Data</button>
      </div>
    </div>

    <div id="registered-data-wrapper" class="hidden ml-5">
      <h1 class="text-center font-bold">Registered Data</h1>
      <div id="registered-data"></div>
    </div>

    <script src="/js/script.js" type="text/javascript"></script>
  </body>
</html>
